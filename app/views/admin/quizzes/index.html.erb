<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Quizzes</h1>
  <%= link_to 'New Quiz', new_admin_quiz_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Published</th>
      <th>Questions</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><code><%= quiz.slug %></code></td>
        <td>
          <% if quiz.published? %>
            <span class="badge bg-success">Published</span>
          <% else %>
            <span class="badge bg-secondary">Draft</span>
          <% end %>
        </td>
        <td><%= quiz.questions.count %></td>
        <td>
          <%= link_to 'View', admin_quiz_path(quiz), class: 'btn btn-sm btn-info' %>
          <%= link_to 'Edit', edit_admin_quiz_path(quiz), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete', admin_quiz_path(quiz), method: :delete, 
                      data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          <%= link_to 'Take Quiz', quiz_path(quiz), class: 'btn btn-sm btn-success', target: '_blank' if quiz.published? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

