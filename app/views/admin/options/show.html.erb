<h1>Option Details</h1>
<p class="text-muted">Question: <%= @question.prompt %></p>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @option.text %></h5>
    <p><strong>Correct:</strong> <%= @option.is_correct? ? 'Yes' : 'No' %></p>
    <p><strong>Position:</strong> <%= @option.position %></p>
  </div>
</div>

<%= link_to 'Edit', edit_admin_quiz_question_option_path(@quiz, @question, @option), class: 'btn btn-warning mt-3' %>
<%= link_to 'Back', admin_quiz_question_options_path(@quiz, @question), class: 'btn btn-secondary mt-3' %>

